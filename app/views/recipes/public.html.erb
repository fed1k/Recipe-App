<h2 id="public-header-text">Public Recipes</h2>
<div class="public-recipes-main-container">
  <% @recipes.each do |i|%>
    <div>
      <div>
        <a href="/recipes/<%=i.id%>"><%= i.name%></a>
        <span>By: <%= User.find(i.user_id).name%></span>
      </div>
      <div>
        <span>Total food items: <%= RecipeFood.where(recipe_id: i.id).count%></span>
        <span>Total price: $<%= Food.where(id: RecipeFood.where(recipe_id: i.id)).sum(:price) %></span>
      </div>
    </div>
  <%end%>
</div>