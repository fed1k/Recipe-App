	  </thead>
    <tbody>
      <% @general_shopping_list.each do |food| %>
        <tr class="odd">
          <%= render food %>
        </tr>
        <%# <p> %>
          <%# <%= link_to "Show this food", food %>
        <%# </p> %>
      <% end %>
	  </tbody>
  </table>
</div>